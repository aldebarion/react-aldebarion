{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "globals": {
    "fetch": false,
    "firebase": false,
    "ROOT_PATH": true
  },
  "env": {
    "browser": true
  },
  "rules": {
    "semi": [2, "never"],
    "indent": ["error", 2],
    "react/jsx-one-expression-per-line": "never"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.documentation.dev.js"
      }
    }
  }
}
